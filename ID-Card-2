    <script>
        function showContactInfo() {
            alert("Contact Information:\nEmail: dr.bright@scp.foundation\nPhone: +1-555-555-5555");
        }

        function toggleAdditionalInfo() {
            var employeeID = prompt("Enter Employee ID:");
            var password = prompt("Enter Password:");
            var loadingScreen = document.getElementById("loading-screen");

            if (employeeID === "4623" && password === "securepassword") {
                loadingScreen.style.display = "block";
                setTimeout(function() {
                    loadingScreen.style.display = "none";
                    var additionalInfo = document.getElementById("unfolded-info");
                    additionalInfo.style.display = "block";
                }, 2000); // Simulate a 2-second verification process
            } else {
                alert("Invalid Employee ID or Password. Access Denied.");
            }
        }
    </script>
